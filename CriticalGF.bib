issn = {1748-9326},
journal = {Environmental Research Letters},
number = {3},
pages = {34017},
title = {{Cropland/pastureland dynamics and the slowdown of deforestation in Latin America}},
url = {http://iopscience.iop.org/1748-9326/10/3/034017},
volume = {10},
year = {2015}
}
