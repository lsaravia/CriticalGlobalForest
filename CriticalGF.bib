issn = {0027-8424, 1091-6490},
journal = {Proceedings of the National Academy of Sciences},
month = {apr},
title = {{Organic-matter loading determines regime shifts and alternative states in an aquatic ecosystem}},
url = {http://www.pnas.org/content/early/2013/04/23/1221037110},
year = {2013}
}
