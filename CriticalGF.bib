file = {:home/leonardo/Mendeley/Science/Cho et al. - 2013 - Avoiding a Spanning Cluster in Percolation Models.pdf:pdf},
issn = {0036-8075},
journal = {Science},
number = {6124},
pages = {1185--1187},
publisher = {American Association for the Advancement of Science},
title = {{Avoiding a Spanning Cluster in Percolation Models}},
url = {http://science.sciencemag.org/content/339/6124/1185},
volume = {339},
year = {2013}
}
@article{Espirito-Santo2014,
