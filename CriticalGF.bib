keywords = {Agricultural,Animals,Bees,Conservation of Natural Resources,Crops,Ecosystem,Humans,Lemur,Madagascar,Models,Pollen,Seeds,Theoretical,Trees},
number = {2},
pages = {440--451},
pmid = {16711035},
shorttitle = {The value of small size},
title = {{The value of small size: loss of forest patches and ecological thresholds in southern Madagascar}},
